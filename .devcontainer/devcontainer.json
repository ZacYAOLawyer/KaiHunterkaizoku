{
  "dockerComposeFile": "docker-compose.yml",
  "service": "dev-env",
  "workspaceFolder": "/workspace",

  // 開發時自動轉發埠，方便本地測試
  "forwardPorts": [80, 3000, 8000, 5432],

  "customizations": {
    "vscode": {
      "settings": {
        // 可自行調整：每次進入 Codespaces 時，啟動指令
        "terminal.integrated.profiles.linux": {
          "dev-shell": {
            "path": "bash",
            "args": ["-c", "docker-compose up -d && sleep 10 && echo 'Welcome to KaiKaiShield Dev Container!'"]
          }
        }
      }
    }
  }
}
